{
  "name": "codex-card",
  "private": true,
  "version": "0.1.0",
  "description": "Distributed UNO web game for a distributed systems class",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:server dev:client",
    "dev:server": "npm --prefix packages/server run dev",
    "dev:client": "npm --prefix packages/client run dev",
    "build": "npm-run-all build:shared build:server build:client",
    "build:shared": "npm --prefix packages/shared run build",
    "build:server": "npm --prefix packages/server run build",
    "build:client": "npm --prefix packages/client run build",
    "lint": "npm run lint --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "test": "npm run test --workspaces --if-present"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
