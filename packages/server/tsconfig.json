{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "baseUrl": "./",
    "types": ["node"],
    "paths": {
      "@code-card/shared": ["../shared/src"],
      "@code-card/shared/*": ["../shared/src/*"]
    },
    "rootDirs": ["src", "../shared/src"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts"]
}
